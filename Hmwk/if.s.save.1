/* if statement branch */

	.global _start

_start:
	mov r1, #1
	mov r2, #2
	mov r3, #3
	mov r4, #4
	mov r5, #5
	mov r6, #6		@user input stand in
_if:
	cmp r6, r1
	beq _mon
	cmp r6, r2
	beq _tue
	cmp r6, r3
	beq _mon
	cmp r6, r4
	beq _tue
	cmp r6, r5
	beq _fri
	bne _nada		@last 'else' condition		

_mon:
	mov r0, #11
	b _exit

_tue:
	mov r0, #5
	b _exit

_fri:
	mov r0, #1
	b _exit

_nada:
	mov r0, #0
	b _exit

_exit:
	mov r7, #1
	swi 0
